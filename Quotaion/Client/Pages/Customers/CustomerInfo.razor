@page "/CustomerInfo/{Id:int}"

<div class="card  border-0 ">
    <div class="card-body">
        <RadzenBreadCrumb>

            <RadzenBreadCrumbItem Path="/CustomerIndex" Text="العملاء" />
            <RadzenBreadCrumbItem  Text=@Customer.Name />
        </RadzenBreadCrumb>

    </div>
</div>
<section class="mt-2">
  
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
                    <img src="https://static.vecteezy.com/system/resources/previews/009/292/244/non_2x/default-avatar-icon-of-social-media-user-vector.jpg" alt="avatar"
              class="rounded-circle img-fluid" style="width: 100px;">
            <h5 class="mt-1">@Customer.Name</h5>
                    <p class="text-muted mb-1">@Customer.Phone</p>
            <div class="d-flex justify-content-center mb-2 gap-1">
                        <RadzenButton class="btn-primary" Text="تعديل "></RadzenButton>            
                        <RadzenButton class="btn-primary" Text="عرض جديد"></RadzenButton>
                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Click="()=>OnRemoveClick(Customer.Id)" Text=" حذف"></RadzenButton>
            </div>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">عدد العروض </p>
                        </div>
                        <div class="col-sm-9 ">
                            <p class="text-muted  bg-light p-2">10</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 "> المتسخدم</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted  bg-light p-2">مبارك</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0 "> تاريخ الاضافة </p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted bg-light p-2">
                                @Customer.Date.ToShortDateString()
                            </p>
                        </div>
                    </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">الاسم الكامل</p>
              </div>
              <div class="col-sm-9">
                            <p class="text-muted  bg-light p-2">@Customer.Name</p>
              </div>
            </div>
            
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">الجوال</p>
              </div>
              <div class="col-sm-9">
                            <p class="text-muted  bg-light p-2">@Customer.Phone</p>
              </div>
            </div>
          
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">الايميل</p>
              </div>
              <div class="col-sm-9">
                            <p class="text-muted  bg-light p-2">@Customer.Email</p>
              </div>
            </div>
           
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">الرقم الضريبي</p>
              </div>
              <div class="col-sm-9">
                            <p class="text-muted  bg-light p-2">@Customer.Vatnummber</p>
              </div>
            </div>
        
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">العنوان</p>
              </div>
              <div class="col-sm-9">
                            <p class="text-muted mb-0 bg-light p-2">@Customer.Address</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                            @if (offerNumbers.Count == 0)
                            {
                                <div class="row align-content-center justify-content-center">
                                   <p class="text-muted text-center">لا يوجد عروض لهذا العميل </p>
                                </div>
                            }
                            else
                            {
                                <RadzenCard class="mt-3">
                                    <table class="table table-striped table-hover">
                                        <thead class="bg-primary">
                                            <tr>
                                                <td>رقم العميل</td>
                                                <td> الاسم</td>
                                                <td>الجوال </td>
                                                <td>الايميل </td>
                                                <td>الرقم الضريبي </td>
                                                <td>العنوان </td>
                                                <td>  </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var customer in offerNumbers)
                                            {
                                                <tr>
                                                    <td>Id</td>
                                                    <td>Name</td>
                                                    <td>Phone</td>
                                                    <td>Email</td>
                                                    <td>Vatnummber</td>
                                                    <td>Address</td>
                                                    <td>
                                                        <a class="btn btn-sm btn-primary"><i class="oi oi-pencil"></i></a>
                                                        <a class="btn btn-sm btn-primary" href="CustomerInfo/@customer.Id"><i class="oi oi-eye"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </RadzenCard>

                            }
              
              </div>
            </div>
          </div>
        
        </div>
      </div>
    </div>

</section>

