@page "/CustomerIndex"
<div class="card  border-0 ">
    <div class="card-body d-flex justify-content-between">
        <h6 class="text-muted">العملاء</h6>
        <RadzenButton Text="إضافة عميل" class="btn-primary" Click="OnAddClick"></RadzenButton>
    </div>
</div>
@if (_customers.Count == 0)
{
    if (_load)
    {
        <div class="row align-content-center justify-content-center mt-5">
            <p class="text-center text-muted ">لا توجد عملاء </p>
        </div>

    }
    else
    {
        <div class="row align-content-center justify-content-center">
            <RadzenProgressBarCircular ShowValue="true" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Large">
                <Template>انتظار</Template>
            </RadzenProgressBarCircular>
        </div>
    }
}
else
{
  
     <RadzenCard class="mt-3">
                <div class="row">
      <div class="col-12">
           <div class="table-scrollable">
                <table class="table table-striped table-hover ">
                    <thead class="bg-primary">
                        <tr>
                            <td>رقم العميل</td>
                            <td> الاسم</td>
                            <td>الجوال </td>
                            <td>الايميل </td>
                            <td>الرقم الضريبي </td>
                            <td>العنوان </td>
                            <td>  </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in _customers)
                        {
                            <tr>
                                <td>@customer.Id</td>
                                <td>@customer.Name</td>
                                <td>@customer.Phone</td>
                                <td>@customer.Email</td>
                                <td>@customer.Vatnummber</td>
                                <td>@customer.Address</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="EditCustomer/@customer.Id"><i class="oi oi-pencil"></i></a>
                                    <a class="btn btn-sm btn-primary" href="CustomerInfo/@customer.Id"><i class="oi oi-eye"></i></a>
                                    <a class="btn btn-sm btn-danger" @onclick="()=>OnRemoveClick(customer.Id)"><i class="oi oi-trash bg-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>

            </RadzenCard>

}


