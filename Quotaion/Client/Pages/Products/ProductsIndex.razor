@page "/ProductsIndex"

<div class="card  border-0 ">
    <div class="card-body d-flex justify-content-between">
       
            <h6 class="text-muted">المنتجات</h6>
           
       
        <RadzenButton Text="إضافة منتج" class="btn-primary" Click="OnAddClick"></RadzenButton>
    </div>
</div>

@if (products.Count == 0)
{
    <div class="row align-content-center justify-content-center">
        <RadzenProgressBarCircular ShowValue="true" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Large">
            <Template>انتظار</Template>
        </RadzenProgressBarCircular>
    </div>
}
else
{
    <RadzenCard Variant="Variant.Flat" class="mt-3">
        <div class="d-flex gap-2 ">

          
                <p class="text-muted"> كل المنتجات</p>
          
          
                <RadzenDropDown AllowClear="true" @bind-Value="@Choosedcategory" AllowVirtualization="true" Name="DropDownVirtualization"
                                AllowFiltering="true" Data=@categories TextProperty="@nameof(Category.Name)" Style="width: 100%; max-width: 400px;" />

          
            <div class="col-4">
                <div class="d-flex gap-1">
                    <input type="text" class="form-control" placeholder="بحث بأسم المنتج" />
                    <RadzenButton class="btn-primary" Icon="search" ButtonStyle="ButtonStyle.Primary" />

                </div>
            </div>
           




        </div>
        <hr>
        <div class="row mt-2">
            @foreach (var product in products)
            {
                <div class="col-md-12 col-lg-3 mb-2 mb-lg-0">
                    <div class="card">
                        <img height="200px" width="200px" class="mx-auto" src="ProductsImg/@product.Img"
                             alt="Laptop" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <p class="small"><a href="#!" class="text-muted">التصنيف</a></p>
                                <p class="text-muted">@product.Category_id</p>
                            </div>

                            <div class="d-flex justify-content-between mb-3">

                                <h5 class="text-dark mb-0">@product.Name</h5>
                                <h5 class="text-dark mb-0">@product.NormalPrice</h5>
                            </div>

                            <a class="w-100 btn btn-primary" href="/DetailsProducts/@product.Id"> عرض</a>

                        </div>
                    </div>
                </div>
            }

        </div>
    </RadzenCard>
}
