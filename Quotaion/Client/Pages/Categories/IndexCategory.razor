@page "/IndexCategory"
<div class="card  border-0 ">
    <div class="card-body d-flex justify-content-between">
        <h6 class="text-muted">التصنيفات</h6>
        <RadzenButton Text="إضافة صنف" class="btn-primary" Click="OnAddClick"></RadzenButton>
    </div>
</div>

@if (_categories.Count == 0)
{
    if (_load)
    {
        <div class="row align-content-center justify-content-center mt-5">
            <p class="text-center text-muted ">لا توجد تصنيفات </p>
        </div>
       
    }
    else
    {
        <div class="row align-content-center justify-content-center">
            <RadzenProgressBarCircular ShowValue="true" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Large">
                <Template>انتظار</Template>
            </RadzenProgressBarCircular>
        </div>
    }
   
}
else
{

    <RadzenCard class="mt-3">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-hover">
                    <thead class="bg-primary">
                        <tr>
                            <td>رقم الصنف</td>
                            <td> الاسم</td>
                            <td>الوصف </td>
                            <td>تاريخ الاضافة </td>
                         
                            <td>  </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in _categories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.Date.ToShortDateString()</td>
                               
                                <td>
                                    <a class="btn btn-sm btn-primary" href="EditCategory/@category.Id"><i class="oi oi-pencil"></i></a>
                                    <a class="btn btn-sm btn-primary" href="DetailsCategory/@category.Id"><i class="oi oi-eye"></i></a>
                                    <a class="btn btn-sm btn-danger" @onclick="()=>OnRemoveClick(category.Id)"><i class="oi oi-trash bg-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </RadzenCard>

}

