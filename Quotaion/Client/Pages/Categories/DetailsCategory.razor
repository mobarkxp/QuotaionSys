@page "/DetailsCategory/{Id:int}"


<div class="card  border-0 ">
    <div class="card-body">
        <RadzenBreadCrumb>
            <RadzenBreadCrumbItem Path="/IndexCategory" Text="التصنيفات" />
            <RadzenBreadCrumbItem Icon="add" Text=@Id.ToString() />
        </RadzenBreadCrumb>

    </div>
</div>

 
<RadzenCard Variant="Variant.Flat" class="mt-3">

    <div class="row">
        <div class="col-sm-3">
            <p class="mb-0">اسم الصنف </p>
        </div>
        <div class="col-sm-9 ">
            <p class="text-muted  bg-light p-2">@category.Name</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <p class="mb-0 "> عدد المنتجات</p>
        </div>
        <div class="col-sm-9">
            <p class="text-muted  bg-light p-2"> @products.Count</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <p class="mb-0 "> تاريخ الاضافة </p>
        </div>
        <div class="col-sm-9">
            <p class="text-muted bg-light p-2">
                @category.Date.ToShortDateString()
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <p class="mb-0 "> الوصف</p>
        </div>
        <div class="col-sm-9">
            <p class="text-muted bg-light p-2">
                @category.Description
            </p>
        </div>
    </div>
</RadzenCard>


<RadzenCard Variant="Variant.Flat" class="mt-3">
    <p class="text-muted">كل منتجات الصنف</p>
    @if (products.Count == 0)
    {
        if (_load)
        {
            <div class="row align-content-center justify-content-center mt-5">
                <p class="text-center text-muted ">لا توجد منتجات </p>
            </div>
        }
        else
        {
            <div class="row align-content-center justify-content-center">
                <RadzenProgressBarCircular ShowValue="true" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Large">
                    <Template>انتظار</Template>
                </RadzenProgressBarCircular>
            </div>
        }

    }
    else
    {
        
    }
</RadzenCard>
